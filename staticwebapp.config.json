{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/GetAllUsers",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "route": "/api/GetUserProfile",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "route": "/api/UpdateUserProfile",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "route": "/api/CreateUser",
      "methods": [
        "POST"
      ],
      "allowedRoles": [
        "administrator"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  }
}

