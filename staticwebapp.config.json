{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/GetAllUsers",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/GetUserProfile",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/UpdateUserProfile",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/GetCategories",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/AddCategory",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/UpdateCategory/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/GetCustomers",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/CreateCustomer",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/UpdateCustomer/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/DeleteCustomer/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/GetInvoices",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/CreateInvoice",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/UpdateInvoice/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/DeleteInvoice/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/GetTasks",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/CreateTask",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/UpdateTask/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/DeleteTask/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/HealthCheck",
      "allowedRoles": ["anonymous"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  }
}